<%= render 'refinery/admin/search_header', :url => refinery.admin_settings_path %>
<% if @settings.any? %>
  <div class='pagination_container'>
    <%= render 'settings' %>
  </div>
<% else %>
  <p>
    <% if searching? %>
      <%= t('no_results', :scope => 'refinery.admin.search') %>
    <% else %>
      <strong>
        <%= t('.empty_set') %>
        <%= t('.create_first', :link => t('new', :scope => 'refinery.admin.settings.actions')) %>
      </strong>
    <% end %>
  </p>
<% end %>

